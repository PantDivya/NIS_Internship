@model IEnumerable<CRUDAjax.Models.Product>

@{
    ViewBag.Title = "Home Page";
}





<div class="container border">
    <div class="mt-3">
        <a href="@Url.Action("AddProduct", "Home")" class="btn btn-success float-end mb-4">Add</a>
        @*@Html.ActionLink("Create", "CreateEmployee", "Home", new { @class = "nav-link" })*@

    </div>
    <h3>
        Product List
    </h3>
    <table class="table table-striped table-bordered border-secondary">
        <thead class="table-dark">
            <tr>
                <th scope="col">SN</th>
                <th scope="col">Name</th>
                <th scope="col">Category</th>
                <th scope="col">Price</th>
                <th scope="col">Stock</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @{ var i = 0;}
            @foreach (var item in Model)
            {
                <tr>

                    <td>@(++i)</td>
                    <td>@Html.DisplayFor(m=>item.Name)</td>
                    <td>@Html.DisplayFor(m=>item.Category)</td>
                    <td>@Html.DisplayFor(m=>item.Price)</td>
                    <td>@Html.DisplayFor(m=>item.Stock)</td>
                    <td>
                        @Html.ActionLink(
                            "Update",
                            "EditProduct",
                            "Home",
                            new { id = item.ProductId },
                            new
                            {
                                @class = "btn btn-warning"@*,
                                data_bs_toggle = "modal",
                                data_bs_target = "#edit_" + item.ProductId*@
                            }
                        )

                        @Html.ActionLink(
                            "Delete",  // The link text
                            "Delete",         // The action method
                            "Home",     // The controller
                           new { id = item.ProductId },
                            new
                            {
                                @class = "btn btn-danger",
                                data_bs_toggle = "modal",
                                data_bs_target = "#delete_" + item.ProductId
                            }
                        )
                    </td>
                </tr>
            }

             @foreach (var product in Model)
                {
                    { Html.RenderPartial("PartialView/_UpdateProduct", product); }
                }
            @*@foreach (var product in Model)
            {
                { Html.RenderPartial("PartialView/_DeleteProduct", product); }
            }*@
        </tbody>
    </table>
</div>


