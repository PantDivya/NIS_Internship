<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <!--Favicons-->
    <link href="@Url.Content("~/Content/img/template/favicon.png")" rel="icon">
    <link href="@Url.Content("~/Content/img/template/apple-touch-icon.png")" rel="apple-touch-icon">
    <!--Fonts-->
    <link href="https://fonts.googleapis.com" rel="preconnect">
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600;1,700;1,800&family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <!--Vendor CSS Files-->
    <link href="@Url.Content("~/Content/vendor/bootstrap/css/bootstrap.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/vendor/bootstrap-icons/bootstrap-icons.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/vendor/aos/aos.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/vendor/glightbox/css/glightbox.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/vendor/swiper/swiper-bundle.min.css")" rel="stylesheet">
    <!--Main CSS File-->
    <link href="@Url.Content("~/Content/css/template.css")" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <!-- Vendor JS Files -->
    <script src="@Url.Content("~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js")"></script>
    <script src="@Url.Content("~/Content/vendor/php-email-form/validate.js")"></script>
    <script src="@Url.Content("~/Content/vendor/aos/aos.js")"></script>
    <script src="@Url.Content("~/Content/vendor/glightbox/js/glightbox.min.js")"></script>
    <script src="@Url.Content("~/Content/vendor/purecounter/purecounter_vanilla.js")"></script>
    <script src="@Url.Content("~/Content/vendor/imagesloaded/imagesloaded.pkgd.min.js")"></script>
    <script src="@Url.Content("~/Content/vendor/isotope-layout/isotope.pkgd.min.js")"></script>
    <script src="@Url.Content("~/Content/vendor/swiper/swiper-bundle.min.js")"></script>
    <!-- Main JS File -->
    <script src="@Url.Content("~/Content/js/template.js")"></script>
</body>
</html>
