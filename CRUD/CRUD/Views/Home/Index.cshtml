@model IEnumerable<CRUD.Models.tblEmployee>
@{
    ViewBag.Title = "Home Page";
}





<div class="container border">
    <div class="mt-3">
        <button class="btn btn-outline-success float-end mb-4">@Html.ActionLink("Create", "CreateEmployee", "Home", new { @class = "nav-link" })</button>

    </div>
    <h3>
        Employee List
    </h3>
    <table class="table table-striped table-bordered border-secondary">
        <thead class="table-dark">
            <tr>
                <th scope="col">SN</th>
                <th scope="col">Name</th>
                <th scope="col">Address</th>
                <th scope="col">Email</th>
                <th scope="col">Contact</th>
                <th scope="col">Action</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Address)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.Contact)</td>
                    <td>
                        @Html.ActionLink(
                            "Update",
                            "UpdateEmployee",
                            "Home",
                            new { id = item.Id },
                            new
                            {
                                @class = "btn btn-warning",
                                data_bs_toggle = "modal",
                                data_bs_target = "#edit_"+ item.Id
                            }
                        )

                        @Html.ActionLink(
                            "Delete",  // The link text
                            "DeleteEmployee",         // The action method
                            "Home",     // The controller
                           new { id = item.Id },
                            new
                            {
                                @class = "btn btn-danger"/*,
                                data_bs_toggle = "modal",
                                data_bs_target = "#delete"*/
                            }
                        )
                    </td>
                </tr>
            }

            @foreach (var employee in Model)
            {
                {Html.RenderPartial("_UpdateEmployee", employee);}
            }
        </tbody>
    </table>
</div>


