@model CRUD.Models.tblEmployee

@{
    ViewBag.Title = "UpdateEmployee";
}

<div class="container border">
    <h3>
        Delete
    </h3>
    <table class="table table-striped table-bordered border-secondary">
        <thead class="table-dark">
            <tr>
                <th scope="col">SN</th>
                <th scope="col">Name</th>
                <th scope="col">Address</th>
                <th scope="col">Email</th>
                <th scope="col">Contact</th>
                <th scope="col">Action</th>

            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Html.DisplayFor(m => m.Id)</td>
                <td>@Html.DisplayFor(m => m.Name)</td>
                <td>@Html.DisplayFor(m => m.Address)</td>
                <td>@Html.DisplayFor(m => m.Email)</td>
                <td>@Html.DisplayFor(m => m.Contact)</td>
                <td>
                    @Html.ActionLink(
                "Delete",  // The link text
                "",         // The action method
                "",     // The controller
               null,
                new
                {
                    @class = "btn btn-danger",
                    data_bs_toggle = "modal",
                    data_bs_target = "#delete"
                }
            )
                </td>
            </tr>
        </tbody>
    </table>
</div>
    <!--Delete Modal -->
    <div class="modal fade" id="delete" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Delete</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                    @using (@Html.BeginForm("Delete", "Home", FormMethod.Post))
                    {
                        @Html.HiddenFor(m => m.Id)
                        <button type="submit" class="btn btn-danger">Delete</button>
                    }
                </div>
            </div>
        </div>
    </div>
