@model CRUD.Models.tblEmployee

@{
    ViewBag.Title = "CreateEmployee";
}
@{ 
   
}

<!--Create Employee-->

<div class="container mt-3 border">
    <div class=" mt-3 mb-3 m-5">
        <h3>Add New Employee</h3>
    </div>
    @using (@Html.BeginForm("AddEmployee", "Home", FormMethod.Post))
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.AntiForgeryToken()

        <div class="form-group m-5 mb-3 mt-3 col-md-10">
            @Html.LabelFor(m => m.Name, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "Enter Name" })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })

        </div>
        <div class="form-group m-5 mb-3 mt-3 col-md-10">
            @Html.LabelFor(m => m.Address, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Address, new { @class = "form-control", @placeholder = "Enter Address" })
            @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
        </div>

        <div class="form-group m-5 mb-3 mt-3 col-md-10">
            @Html.LabelFor(m => m.Email, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Enter Email" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>
        <div class="form-group m-5 mb-3 mt-3 col-md-10">
            @Html.LabelFor(m => m.Contact, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Contact, new { @class = "form-control", @placeholder = "Enter Contact" })
            @Html.ValidationMessageFor(m => m.Contact, "", new { @class = "text-danger" })
        </div>
        <div class="form-group m-5 mb-3 mt-3 col-md-10">
            @Html.Label("Salary", new { @class = "form-label" })
            @Html.TextBox("Salary", "",  htmlAttributes: new { @class = "form-control", @Name ="tblSalary.Salary", @placeholder = "Enter Contact" } )
            @Html.ValidationMessage("Salary", "", new { @class = "text-danger" })
        </div>
        <div class="form-group m-5 mb-3 mt-3">
            <input type="submit" value="Create" class="btn btn-success" />
        </div>

    }

</div>

