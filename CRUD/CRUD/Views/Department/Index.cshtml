@model IEnumerable<CRUD.Models.tblDepartment>
@{
    ViewBag.Title = "Index";
}


<div class="container border">
    <div class="mt-3">
        <a href="@Url.Action("Create", "Department")" class="btn btn-outline-success float-end mb-4">Create</a>

    </div>
    <h3>
        Department List
    </h3>
    <table class="table table-striped table-bordered border-secondary">
        <thead class="table-dark">
            <tr>
                <th scope="col">SN</th>
                <th scope="col">Department Name</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @{ var i = 0;}
            @foreach (var item in Model)
            {
                <tr>

                    <td>@(++i)</td>
                    <td>@Html.DisplayFor(m => item.DepartmentName)</td>
                    <td>
                        @Html.ActionLink(
                            "Update",
                            "UpdateEmployee",
                            "Home",
                            new { id = item.Id },
                            new
                            {
                                @class = "btn btn-warning",
                                data_bs_toggle = "modal",
                                data_bs_target = "#edit_" + item.Id
                            }
                        )

                        @Html.ActionLink(
                            "Delete",  // The link text
                            "DeleteEmployee",         // The action method
                            "Home",     // The controller
                           new { id = item.Id },
                            new
                            {
                                @class = "btn btn-danger",
                                data_bs_toggle = "modal",
                                data_bs_target = "#delete_" + item.Id
                            }
                        )
                    </td>
                </tr>
            }

            @foreach (var employee in Model)
            {
                { Html.RenderPartial("PartialView/_UpdateDepartment", employee); }
            }
            @foreach (var employee in Model)
            {
                { Html.RenderPartial("PartialView/_DeleteDepartment", employee); }
            }
        </tbody>
    </table>
</div>

