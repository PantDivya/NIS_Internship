
@{
    ViewBag.Title = "CreateEmployee";
}

@model MVC_Project.Models.Employee
@if (ViewData.ModelState.IsValid)
{
    if (@ViewBag.Name != null)
    {
        <b>
            Name : @ViewBag.Name<br />
            Address : @ViewBag.Address<br />
            Email : @ViewBag.Email<br />
            Contact : @ViewBag.Contact<br />
            Image : @ViewBag.Image

        </b>
    }
}
